/* 
 *   Theme functions:
 * - theme_relative_show_parents($node, $fieldset=1)
 * - theme_relative_show_children($node, $fieldset=1)
 * - theme_relative_show_ancestors($node, $ancestors, $fieldset=1)
 * - theme_relative_show_link_operations($childrentypes, $parent)
 *
 * - theme_relative_block_parents($node)
 * - theme_relative_block_children($node)
 * - theme_relative_block_ancestors($node, $ancestors)
 * - theme_relative_block_link_operations($node)
 * 
 * - theme_relative_ancestor($ancestor, $indent=0)
 * - theme_relative_link($title, $target, $parent_nid=0, $extra='')	
 * - theme_relative_bullets($items)
 */

function theme_relative_show_parents($node, $fieldset=1) {
  $output = '';

  // load all nodes associated with this one as the parent nid and show links to all of them.
  $result = db_query('SELECT parent_nid as pid FROM {relative} WHERE nid = %d', $node->nid);
  while($parent = db_fetch_object($result)) {
    $parent_nodes[] = node_load($parent->pid);
  }
  
  // sort output by node type
  if (is_array($parent_nodes)) {
    foreach (relative_sort_types() as $type) {
      foreach ($parent_nodes as $parent_node) {
        if ($parent_node->type == $type) {
          $output .= '<div class="relative_parent">';
          $output .= node_get_types('name', $parent_node->type) . ': ';
          $output .= l($parent_node->title, 'node/'.$parent_node->nid, array('class' => 'relative_view_' . $type));
          $output .= "</div>\n";
        }
      }
    }
  }
  if ($output && $fieldset) {
    $output = theme('fieldset', array('#title' => variable_get('relative_parents_label', t('Parent nodes')), 
                                      '#children' => $output));
  }
  return $output;
}

function theme_relative_show_children($parent, $fieldset=1) {
  $output = '';
	
  // load all nodes associated with this one as the parent nid and show links to all of them.
  $result = db_query('SELECT nid FROM {relative} WHERE parent_nid = %d', $parent->nid);
  while($child = db_fetch_object($result)) {
    $child_nodes[] = node_load($child->nid);
  }
  if (!is_array($child_nodes)) return '';

  $childrentypes = relative_childrentypes($parent); // sorted list of types

  foreach($childrentypes as $childtype) {
    $child_display_option = variable_get('relative_render_'. $parent->type .'_'. $childtype, 'title');
    if (strpos($child_display_option, 'view:') !== FALSE) {
      $viewname = str_replace('view:', '', $child_display_option);
      $children_box = relative_child_as_view($parent, $childtype, $viewname);
    } else {
      $children_box = "\n";
      foreach($child_nodes as $child_node) {
        if ($child_node->type != $childtype) continue;
        switch ($child_display_option) {
          case 'title':
            $children_box .= node_get_types('name', $childtype) . ': ';
            $children_box .= l(t($child_node->title), 'node/'.$child_node->nid, array('class' => 'relative_view_' . $childtype)) . "<br />\n";
            break;
          case 'teaser':
            $children_box .= theme('fieldset', array('#title' => node_get_types('name', $childtype), 
                                                     '#children' => node_view($child_node, TRUE)));
            break;
          case 'body':
            $children_box .= theme('fieldset', array('#title' => node_get_types('name', $childtype), 
                                                     '#children' => node_view($child_node, FALSE)));
            break;
        }
      }
    }  
    //drupal_set_message($childtype . $children_box);
    $output .= ($children_box ? "\n" . '<div class="relative_child">' . $children_box . "</div>\n" : '');
  }

  if ($output && $fieldset) {
    $output = "\n" . theme('fieldset', array('#title' => variable_get('relative_children_label', t('Children nodes')), 
                                      '#children' => $output));
  }
  return $output;
}



function theme_relative_show_ancestors($node, $ancestors, $fieldset=1) {
  $output = '';
  $indent = 0;

  foreach($ancestors as $ancestor) {
    if (is_array($ancestor)) {
      foreach($ancestor as $sibling) {
        $output .= theme('relative_ancestor', $sibling, $indent);
      }
      $indent++;
    }
    else {
      $output .= theme('relative_ancestor', $ancestor, $indent++);
    }
  }

  if ($output && $fieldset) {
    $output = theme('fieldset', array('#title' => variable_get('relative_ancestors_label', t('Ancestor nodes')),
                                      '#children' => $output));
  }
  return $output;
}




/**
 * Shows the "Link operations" box for attaching and removing children nodes
 */
function theme_relative_show_link_operations($parent, $fieldset=1) {
  $parent_nid = $parent->nid;

  $childrentypes = relative_childrentypes($parent);
  if (count($childrentypes) == 0) {
    return '';
  }


  $output .= '<ul>';
  
  foreach($childrentypes as $type) {
    if (relative_may_add_child($parent, $type)) {
      $type_name = node_get_types('name', $type);
      
      $may_create = relative_may_attach_new_child_type($parent->type, $type);

      // only offer to let user create new child if user has 'create' access 
      // and common child relationship isn't required
      if ($may_create && node_access('update', $parent)) {
      	$output .= '<li>';
        $output .= l(t('Create new !type', array('!type'=>$type_name)), "node/add/$type/parent/$parent_nid", array('class' => 'relative_create_' . $type));
        $output .= '</li>';
      }
    }
  }
  $output .= '<p>';
  foreach($childrentypes as $type) {
    if (relative_may_add_child($parent, $type)) {
      $type_name = node_get_types('name', $type);
      
      $may_create = relative_may_attach_new_child_type($parent->type, $type);

      // only show link to attach existing node when the potential child doesn't require a parent.
      if ((!relative_requires_parent($type) || relative_multi_parent($type)) && node_access('update', $parent)) {
		$output .= '<li>';
        $output .= l(t('Attach existing !type', array('!type'=>$type_name)), "relative/listnodes/$type/parent/$parent_nid", array('class' => 'relative_attach_' . $type));
        $output .= '</li>';
      }
    }
  }
  $output .= '</ul>';
  
  if ($output) {
    $output = "\n" . '<div class="relative_add_child">' . $output . "</div>\n";
  }

  // show child removal links
  $result = db_query('SELECT nid FROM {relative} WHERE parent_nid = %d', $parent_nid);
  $output = ($output ? $output . '<br />' : '');
  while($child = db_fetch_object($result)) {
    $child_node = node_load($child->nid);
    // make sure that no dependencies exist that would require this node to be attached
    if (relative_may_unchild($parent, $child_node)) {
      $removables[] = $child_node;
    }
  }
  if (is_array($removables)) {
    // sort output by node type
    foreach(relative_sort_types() as $type) {
      foreach($removables as $child_node) {
        if ($child_node->type == $type) {
          $output .= '<div class="relative_removable">';
          $output .= l(t('Remove ' . node_get_types('name', $child_node->type)), "relative/unparent/$parent_nid/$child_node->nid", array('class' => 'relative_remove_' . $type));
          $output .= ' : ';     // separator
          $output .= t($child_node->title) ;    // note not a link: helps prevent accidental removal
          $output .= "</div>\n";
        }
      }
    }
  }

  if ($output && $fieldset && $may_create) {
    $output = theme('fieldset', array('#title' => variable_get('relative_actions_label', t('Link operations')), 
                                    //'#collapsible' => TRUE,
                                      '#children' => $output));
  }
  return $output;
}


