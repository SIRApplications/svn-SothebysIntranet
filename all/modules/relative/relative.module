/**
 * Implementation of hook_block().
 *
 * Generates navigation block to quickly jump to any of this node's ancestors.
 * See http://api.drupal.org/api/4.7/function/block_example_block
 */
function relative_block($op = 'list', $delta = 0, $edit = array()) {
  // The $op parameter determines what piece of information is being requested.
  switch ($op) { 
    case 'list':
      // If $op is "list", we just need to return a list of block descriptions.
      // This is used to provide a list of possible blocks to the administrator,
      // end users will not see these descriptions. 
      $blocks[0]['info'] = t('Node relative: ancestors');
      $blocks[1]['info'] = t('Node relative: children');
      $blocks[2]['info'] = t('Node relative: parent');
      $blocks[3]['info'] = t('Node relative: link operations');
      $blocks[4]['info'] = t('Node relative: MENU');
      return $blocks;

    case 'configure':
      // If $op is "configure", we need to provide the administrator with a
      // configuration form. The $delta parameter tells us which block is being
      // configured. 
      $form = array();
      switch($delta) {
        case 0: // Ancestors block
          $form['relative_nav_types'] = array(
            '#type' => 'select',
            '#title' => t('Allowable Relativity Block Node types'),
            '#default_value' => variable_get('relative_nav_types', relative_node_list()),
            '#options' => relative_node_list('none'),
            '#description' => t('What node types are allowed to be used in this block?'),
            '#size' => 5,
            '#multiple' => TRUE,
          );
          break;
      }

      return $form;

    case 'save':
      // If $op is "save", we need to save settings from the configuration form.
      // Since the first block is the only one that allows configuration, we
      // need to check $delta to make sure we only save it.
      switch($delta) {
        case 0;
          variable_set('relative_nav_types', $edit['relative_nav_types']);
          break;
      }
      return; 
    
    case 'view': default: 
      // If $op is "view", then we need to generate the block for display
      // purposes. The $delta parameter tells us which block is being requested.

      // see if we're viewing a node
      if (arg(0) == 'node' && is_numeric(arg(1))) {
        // see if it's a valid node
        $node = node_load(arg(1));
        if (is_object($node) && node_access('view', $node)) {
          switch ($delta) {
            case 0:     
              $ancestors = relative_load_ancestors($node,1,TRUE);
              if (is_array($ancestors) && count($ancestors) > 0) {
                $block = array('subject' => variable_get('relative_ancestors_label', t('Related Ancestors')),
                               'content' => theme('relative_block_ancestors', $node, $ancestors),
                               );
              }
              break;
            case 1:
              $content = theme('relative_block_children', $node);
              if ($content) {
                $block = array('subject' => variable_get('relative_children_label', t('Related Items')),
                               'content' => $content,
                               );
              }
              break;
            case 2:
              $content = theme('relative_block_parents', $node);
              if ($content) {
                $block = array('subject' => variable_get('relative_parents_label', t('Related Parents')),
                               'content' => $content,
                               );
              }
              break;
            case 3:
              $content = theme('relative_block_link_operations', $node);
              if ($content) {
                $block = array('subject' => variable_get('relative_actions_label', t('Link operations')),
                               'content' => $content,
                               );
              }
              break;
                      
	    case 4:
	    	
		//get parents
		$parents = array();
		$query = db_query('SELECT parent_nid as pid FROM {relative} WHERE nid = %d', $node->nid);
		while($current = db_fetch_object($query))
			$parents[] = node_load($current->pid);
			
		$output = '';
		
		//cycle through parents to find current node and siblings
		if(!empty($parents)) //if parent(s) exist
		{
			$output .= '<ul class="menu">';
		    	foreach($parents as $parent)
		    	{
				if(node_access("view", $parent))
				{
					$output .= '<li>';
					$output .= '<li class="expanded">' . l(t($parent->title), 'node/'.$parent->nid);
	
			    		//find current parent's children
			    		$siblings = array();
			    		$query1 = db_query('SELECT nid FROM {relative} WHERE parent_nid = %d', $parent->nid);
					while($current = db_fetch_object($query1))
						$siblings[] = node_load($current->nid);
	
					$output .= '<ul class="menu">';
					foreach($siblings as $sibling)
					{
						if(($sibling == $node) && (($sibling->type) != ("ef")) && (($sibling->type) != ("mf")) && (($sibling->type) != ("sf")) && (($sibling->type) != ("wf")))	//current node
						{
							$output .= '<li class="expanded">' . l(t($sibling->title), 'node/'.$sibling->nid, array('class' => 'active'));	
							//find current node's children		
							$children = array();
							$query3 = db_query('SELECT nid FROM {relative} WHERE parent_nid = %d', $sibling->nid);
							while($child = db_fetch_object($query3))
							    	  $children[] = node_load($child->nid);

							$output .= '<ul class="menu">';
							if(!empty($children))
								foreach($children as $child)
									if((node_access("view", $child)) && (($child->type) != ("ef")) && (($child->type) != ("mf")) && (($child->type) != ("sf")) && (($child->type) != ("wf")))
									{
										$output .= '<li>';
										$output .= l(t($child->title), 'node/'.$child->nid);			
										$output .= '</li>';
									}

						    	$output .= '</ul>';
						}
						else
						{
							if((node_access("view", $sibling)) && (($sibling->type) != ("ef")) && (($sibling->type) != ("mf")) && (($sibling->type) != ("sf")) && (($sibling->type) != ("wf")))
							{
								$output .= '<li>';
								$output .= l(t($sibling->title), 'node/'.$sibling->nid);
								$output .= '</li>';
							}
						}
						
						$output .= '</li>';
					}
				
					$output .= '</li>';
				    	$output .= '</ul>';
				}
		    	}
		    	$output .= '</ul>';
		}
		
		else	//if  no parents/siblings
		{
			$children = array();						
			$query3 = db_query('SELECT nid FROM {relative} WHERE parent_nid = %d', $node->nid);
			while($child = db_fetch_object($query3))
			    	  $children[] = node_load($child->nid);

			if(!empty($children))
			{
				$output .= '<ul class="menu">';
				$output .= '<li class="expanded">'; 
			
				$output .= l(t($node->title), 'node/'.$node->nid, array('class' => 'active'));
				
				$output .= '<ul class="menu">';
			
				foreach($children as $child)
				{
					if((node_access("view", $child)) && (($child->type) != ("ef")) && (($child->type) != ("mf")) && (($child->type) != ("sf")) && (($child->type) != ("wf")))
					{
						$output .= '<li>';
						$output .= print_link($child);			
						$output .= '</li>';
					}
				}
					
				$output .= '</li>';
		  		$output .= '</ul>';					
			}
		}

		$block = array('subject' => variable_get('', t('')), 'content' => $output,);
		 break;
          }
        }
      }  
      return $block;
  }
}

function print_link($n, $state = '')
{
	if (node_access("view", $n)) 
		return l(t($n->title), 'node/'.$n->nid,  array('class' => $state));
}

/**
 * Generate an array of ancestors for the given node.
 * This will keep looking for more ancestors until a circular path was found,
 * if a node has multiple or no parents at all.
 * If $load_multi_parent is true, the first multi-parent result found will be placed
 * in the output array as an array of nodes.  Otherwise, all array elements will be nodes.
 */
function relative_load_ancestors($node, $load_multi_parent=1, $block=FALSE) {
  $search_max = 5; // make this a settings variable someday
  if (is_numeric($node->nid)) {
    $ancestors = array();
    $nids = array();
    $search_nid = $node->nid;
    $cnt = 0;
    $allowed_types = variable_get('relative_allow_types', array());
    if ($block == TRUE) {
      $allowed_types = variable_get('relative_nav_types', $allowed_types);
    }
	
    do {
      $keep_going = 0;
      $result = db_query("SELECT parent_nid from {relative} where nid=%d", $search_nid);
      $parent_count = db_num_rows($result);
      if ($parent_count == 1 && $obj = db_fetch_object($result)) {
        // make sure we're not pursuing a circular path and that we stop at $search_max parents
        if (!in_array($obj->parent_nid, $nids) && $cnt++ < $search_max) {
          //drupal_set_message("unshifting node ".$obj->parent_nid." onto the ancestors array");
          $parent_node = node_load($obj->parent_nid);
          if (node_access('view', $parent_node) && in_array($parent_node->type, $allowed_types)) {
            array_unshift($ancestors, $parent_node);
            $nids[] = $obj->parent_nid;
            $search_nid = $obj->parent_nid;
            $keep_going = 1;
          }
        }
      }
      elseif($parent_count > 1 && $load_multi_parent && $cnt++ < $search_max) {
        //drupal_set_message("found parent_count == $parent_count, about to add array to ancestors array");
        // perhaps upon encountering multiple parents, it would suffice to print them
        // all out at the same level and not follow any of them up, but still allow
        // the user to navigate up whatever hierarchy they want to.
        $siblings = array();
        while($obj = db_fetch_object($result)) {
          // make an array of nodes to display at this level
          $parent_node = node_load($obj->parent_nid);
          if (!in_array($obj->parent_nid, $nids) && node_access('view', $parent_node) && in_array($parent_node->type, $allowed_types)) {
            array_unshift($siblings, $parent_node);
            $nids[] = $obj->parent_nid;
            $search_nid = $obj->parent_nid; // only used when single result is rendered.
          }
        }
        if (count($siblings) > 0) {
          array_unshift($ancestors, $siblings);
        }
        if (count($siblings) == 1) {
          $keep_going = 1;
        }
      }
    } while($keep_going);
    return $ancestors;
  }
}

/**
 * Determines if the specified parent node may add a child of type $type.
 * @return  true if possible, false otherwise.
 */
function relative_may_add_child($parent, $type) {
  $common_children_reqd = variable_get('relative_common_child_'.$parent->type.'_'.$type, array());
  if (count($common_children_reqd)) {
    // NOTE: all of this needs node_access logic applied at the SQL level.  Currently, if unreadable relationships fill the need, they allow this to pass through
    
    // lookup all existing children and see if any of them are on the common_children_reqd list
    $result = db_query("SELECT n.nid as nid FROM {node} n INNER JOIN {relative} r ON n.nid=r.nid WHERE r.parent_nid = %d AND n.type IN ('".implode("','", $common_children_reqd)."')", $parent->nid);
    while($child = db_fetch_object($result)) {
      $children[] = $child->nid;
    }
    // no common children defined for the parent, reject the request
    if (!$children || !is_array($children) || !count($children)) {
      return false;
    }
    
    // now, see if any of the children that were found have a parent of type $type
    $children = implode(',', $children);
    $result = db_query("SELECT count(n.nid) as cnt FROM {node} n INNER JOIN {relative} r ON n.nid=r.parent_nid WHERE r.nid IN ($children) AND n.type='%s'", $type);
    $count = db_result($result);
    if (!$count) {
      return false;
    }
  }

  $ord = variable_get('relative_child_ord_'.$parent->type.'_'.$type, 'any');
  if ($ord == 'any') {
    return true;
  }
  else {
    // look up how many children this parent currently has of the specified type
    $res = db_fetch_object(db_query("SELECT count(n.nid) as cnt FROM {node} n INNER JOIN {relative} r ON n.nid=r.nid WHERE r.parent_nid = %d AND n.type='%s'", $parent->nid, $type));
    if ($res->cnt >= $ord) {
      return false;
    }
    else {
      return true;
    }
  }
}

/**
 * Convenience function for determining if a node requires a parent to exist.
 */
function relative_requires_parent($node) {
  if (is_object($node)) {
    $type = $node->type;
  }
  else {
    $type = $node;
  }
  if (variable_get("relative_parent_ord_$type", '') == 'one' ||
     variable_get("relative_parent_ord_$type", '') == 'one or more') {
     return true;
  }

  return false;
}

/**
 * Convenience function for determining if a node may have more than one parent.
 */
function relative_multi_parent($node) {
  if (is_object($node)) {
    $type = $node->type;
  }
  else {
    $type = $node;
  }
  if (variable_get("relative_parent_ord_$type", '') == 'any' ||
     variable_get("relative_parent_ord_$type", '') == 'one or more') {
     return true;
  }
  return false;
}

/**
 * If this node is required to connect a series of nodes together, return FALSE
 */
function relative_may_unchild($parent, $child) {
  
  if (!node_access('update', $parent)) {
    return FALSE;
  }
  
  // check all possible child types for this parent
  foreach (node_get_types('names') as $type=>$name) {
    $conduit_types = variable_get('relative_common_child_'.$parent->type.'_'.$type, array());
    if (in_array($child->type, $conduit_types)) {
      // make sure no child nodes of type $type exist with $child as a child, as they would require $child here to exist.
      $result = db_query("SELECT DISTINCT n.nid as nid FROM {node} n INNER JOIN {relative} r ON n.nid=r.nid WHERE n.type = '%s' AND r.parent_nid = %d", $type, $parent->nid);
      if (db_num_rows($result) > 0) {
        return FALSE;
      }
    }
  }
  return TRUE;
}

/**
 * See if current user may create a *new* child of type $child_type to a parent of type $parent_type
 */
function relative_may_attach_new_child_type($parent_type, $child_type) {
  if (node_access('create', $child_type)) {
    // make sure relationship is still valid
    if (in_array($child_type, variable_get('relative_type_'.$parent_type, array()))) {
      // make sure relatinship doesn't require a common child
      if (!variable_get('relative_common_child_'.$parent_type.'_'.$child_type, FALSE)) {
        return TRUE;
      }
    }
    else {
      return TRUE;
    }
  }
  return FALSE;
}

/**
 * Deletes all rows involving the specified node from the database table
 */
function relative_delete_relationships($node) {
  // look to see if this is a required common child that is currently holding relationships together
  foreach (node_get_types('names') as $ptype=>$pname) {
    foreach (node_get_types('names') as $chtype=>$chname) {
      // make sure that the parent/child relationship is still valid
      if (in_array($chtype, variable_get('relative_type_'.$ptype, array()))) {
        
        $conduit_types = variable_get('relative_common_child_'.$ptype.'_'.$chtype, array());
        if (in_array($node->type, $conduit_types)) {
          //drupal_set_message("deleting conduit node of type $node->type.  See if there are any dependent $chtype relatives that are children of $ptype nodes");
          // find all children of type $chtype of this node's parents of type $ptype
          $dependent_children = relative_list_grand_relatives($node, 'parent', 'child', array($ptype), array($chtype), FALSE);
          if (is_array($dependent_children) && count($dependent_children)) {
            $dependent_children[$node->nid] = $node->nid; // include self in children filter
            
            // find their parents of type $ptype
            $result = db_query("SELECT DISTINCT n.nid as nid FROM {node} n INNER JOIN {relative} r ON n.nid=r.parent_nid WHERE n.type = '%s' AND r.nid IN (".implode(',', array_keys($dependent_children)).")", $ptype);
            while($obj = db_fetch_object($result)) {
              // if this potentially dependent parent also has $node as a child, delete it
              if (db_result(db_query("SELECT count(r.nid) as cnt FROM {relative} r WHERE r.parent_nid=%d AND r.nid=%d", $obj->nid, $node->nid))) {
                $dependent_parents[] = $obj->nid;
              }
            }
            if (is_array($dependent_parents) && count($dependent_parents)) {
              drupal_set_message(t('Removing dependent children (%children) from dependent parents (%parents)', array('%children'=>implode(',', array_keys($dependent_children)), '%parents'=>implode(',', $dependent_parents))));
              // delete any relationships that require these $dependent_parents to have these $dependent_children
              db_query("DELETE FROM {relative} WHERE parent_nid IN (".implode(',', $dependent_parents).") AND nid IN (".implode(',', array_keys($dependent_children)).")");
            }
          }
        }
      }
    }
  }
  // clear out all relationships directly involving this node
  db_query('DELETE FROM {relative} WHERE nid = %d OR parent_nid = %d', $node->nid, $node->nid);
}

/**
 * Implementation of hook_nodeapi().
 *
 * This hook allows us to act on all major node operations, 
 * so we can manage our additional data appropriately.
 */
function relative_nodeapi(&$node, $op, $teaser, $page) {
  if ($_GET['parent_node']) {
    $node->parent_node = $_GET['parent_node'] + 0;
  }
  elseif($_POST['parent_node']) {
    $node->parent_node = $_POST['parent_node'] + 0;
  }

  switch ($op) {

    case 'validate':
      if ($node->nid && ($_GET['parent_node'] || $_POST['parent_node'])) {
        $parents = explode(',', $node->parent_node);
        foreach($parents as $parent_nid) {
          $parent = node_load($parent_nid);
          if (!$parent || !in_array($node->type, variable_get('relative_type_'. $parent->type, array()))) {
            form_set_error('relative_type'.$node->type, t('You\'re not allowed to create this type of attachment.'));
          }
        }
      }
      break;

